@{
    string nombre = Context.User.Identity.Name;
}

@if (Context.User.Identity.IsAuthenticated == false)
{
    <div class="nav-item" style="justify-content:end">
        <a class="nav-link" asp-controller="User" asp-action="LogInUsuario">Login</a>
    </div>
}
else
{
<div class="dropdown">
    <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">
        <span>@nombre</span>
    </button>
    <ul class="dropdown-menu" style="right: 0 !important; left: auto;">
        <li><a class="dropdown-item" asp-action="PerfilUsuario" asp-controller="User">Perfil</a></li>
        <li><a class="dropdown-item" asp-action="Pedidos" asp-controller="User">Pedidos</a></li>
        <li><a class="dropdown-item" asp-action="Carrito" asp-controller="Home">Carrito</a></li>
        <li><hr class="dropdown-divider"></li>
        <li><a class="dropdown-item" asp-controller="Manage" asp-action="LogOut">LogOut</a></li>
    </ul>
</div>
}